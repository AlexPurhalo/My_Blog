<div class="signup">
  <div class="container">

    <h1>Sign Up</h1>
    <%= form_for @user do |f| %>
        <p>
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
        </p>
        <p>
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
        </p>
        <p>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </p>
        <p>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </p>
        <p>
          <%= f.submit 'Sign up' %>
        </p>
    <% end %>

  </div>
</div>