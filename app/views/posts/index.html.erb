<div class="container">

  <h3><%= link_to "New Post", new_post_path %></h3>
  <%= form_for posts_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %>


  <div class="row">
    <% @posts.each do |post| %>
        <div class="col-md-6">
          <div class="thumbnail">
            <%= image_tag post.picutre %>
            <%= link_to(post) do %>
                <div class="caption">
                  <h3><%= post.title %></h3>
                  <p class="description"><%= post.text %></p>
                </div>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>

